<resources>

    <!-- Base application theme. -->
    <!-- default and theme for scholarhsip tab. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>

    </style>

    <!--Theme for College Tab. Changes primary color-->
    <style name="CollegeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/collegeColor</item>
        <item name="colorPrimaryDark">@color/collegeColor</item>
        <item name="colorAccent">@color/colorAccent</item>\
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <!--Theme for Employment Tab. Changes primary color-->
    <style name="EmploymentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/employmentColor</item>
        <item name="colorPrimaryDark">@color/employmentColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <!--Theme for Others Tab. Changes primary color-->
    <style name="OthersTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/othersColor</item>
        <item name="colorPrimaryDark">@color/othersColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/round_corner_rectangle</item>
        <item name="android:popupElevation">@dimen/elevationMenu</item>
    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen
        </item> <!--USED FOR SPLASHSCREEN-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--for toolbars only-->
    <style name="tajawalTextAppearance">
        <item name="android:fontFamily">@font/tajawal_regular</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/round_corner_rectangle</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="addEntryTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1e88e5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="addEntryEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#546e7a</item>
        <item name="android:backgroundTint">#fafafa</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="addEntryCardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="addEntryEditTextCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#fafafa</item>
        <item name="android:foregroundGravity">center</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="outerLinearLayoutAddEntry">
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingBottom">50dp</item>
    </style>

    <style name="innerLinearLayoutAddEntry">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="smallerCardViewInsideCardView">
        <item name="android:layout_gravity">center</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">@dimen/smallerCardCornerRadius</item>
        <!--   <item name="android:stateListAnimator">@animator/button_elevate</item>  -->

    </style>
</resources>
